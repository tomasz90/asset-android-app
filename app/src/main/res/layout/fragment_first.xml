<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FirstFragment">

    <TextView
        android:id="@+id/asset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Gold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="5.445 USD"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/unit_price"
        app:layout_constraintTop_toTopOf="@+id/asset" />

    <TextView
        android:id="@+id/units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:text="3oz."
        app:layout_constraintStart_toEndOf="@+id/asset"
        app:layout_constraintTop_toTopOf="@+id/asset" />

    <TextView
        android:id="@+id/unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="1450 USD"
        app:layout_constraintStart_toEndOf="@+id/units"
        app:layout_constraintTop_toTopOf="@+id/asset" />

    <TextView
        android:id="@+id/additional_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Additional info"
        app:layout_constraintStart_toStartOf="@+id/asset"
        app:layout_constraintTop_toBottomOf="@+id/asset" />
</androidx.constraintlayout.widget.ConstraintLayout>